{
  "manifest_version": 2,
  "name": "Orbit",
  "version": "0.0.1",
  "description": "Orbitâ€™s Chrome extension allows you to get information on your community members, directly on GitHub issues and Pull Requests.",
  "short_name": "Orbit",
  "homepage_url": "https://orbit.love",
  "minimum_chrome_version": "42",
  "permissions": ["storage"],
  "content_scripts": [
    {
      "run_at": "document_start",
      "matches": [
        "https://github.com/*/*/pull/*",
        "https://github.com/*/*/issues/*"
      ],
      "css": ["src/github/orbit-action.css"],
      "js": ["src/github/background.js"]
    }
  ],
  "browser_action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": ["icons/*.png"],
  "options_page": "src/options/options.html"
}
