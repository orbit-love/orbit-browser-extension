{
  "manifest_version": 2,
  "name": "Orbit",
  "version": "0.0.1",
  "description": "Orbit Chrome extension",
  "short_name": "Short Orbit Name",
  "permissions": [
    "activeTab",
    "declarativeContent",
    "storage",
    "https://app.orbit.love/"
  ],
  "content_scripts": [
    {
      "run_at": "document_start",
      "matches": [
        "https://github.com/*/*/pull/*",
        "https://github.com/*/*/issues/*"
      ],
      "css": ["orbit-action.css"],
      "js": [
        "vendor/chrome-extension-async.js",
        "vendor/github-injection.js",
        "orbit-helper.js",
        "orbit-action.js",
        "background.js"
      ]
    }
  ],
  "browser_action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png"
    }
  },
  "web_accessible_resources": ["icons/*.png"],
  "options_page": "options.html"
}
