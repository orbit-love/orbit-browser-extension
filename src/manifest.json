{
  "manifest_version": 2,
  "name": "Orbit",
  "version": "0.6.0",
  "description": "The Orbit extension brings all your community data right at your fingertips",
  "short_name": "Orbit",
  "homepage_url": "https://orbit.love",
  "minimum_chrome_version": "42",
  "permissions": ["identity", "storage"],
  "background": {
    "persistent": false,
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "run_at": "document_start",
      "matches": ["https://github.com/*"],
      "exclude_matches": ["https://*/login/*"],
      "js": ["widget/githubEntrypoint.js"]
    },
    {
      "run_at": "document_start",
      "matches": ["https://twitter.com/*"],
      "js": ["widget/twitterEntrypoint.js"]
    },
    {
      "run_at": "document_start",
      "matches": ["https://www.linkedin.com/*"],
      "js": ["widget/linkedinEntrypoint.js"]
    },
    {
      "run_at": "document_start",
      "matches": ["https://mail.google.com/mail/*"],
      "js": ["widget/gmailEntrypoint.js"]
    }
  ],
  "browser_action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": ["icons/*.png", "icons/*.svg"],
  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": true
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "key": ""
}
