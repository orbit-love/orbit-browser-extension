{
  "name": "orbit-browser-extension",
  "version": "0.4.0",
  "description": "Orbit browser extension",
  "repository": "git@github.com:orbit-love/orbit-browser-extension.git",
  "author": "Nicolas Goutay <nicolas.goutay@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "mkdir -p extension && cp manifest.json extension/ && parcel src/github/background.js icons/* src/constants.js src/**/*.html src/**/*.css --dist-dir extension",
    "build": "mkdir -p extension && cp manifest.json extension/ && parcel build src/github/background.js icons/* src/constants.js src/**/*.html src/**/*.css --dist-dir extension",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "devDependencies": {
    "@babel/core": "^7.9.6",
    "@babel/plugin-proposal-optional-chaining": "^7.10.0",
    "@babel/plugin-transform-modules-commonjs": "^7.9.6",
    "@babel/plugin-transform-runtime": "^7.10.0",
    "@tailwindcss/forms": "^0.5.3",
    "@testing-library/dom": "^9.2.0",
    "jest": "^29.5.0",
    "jest-chrome": "0.8.0",
    "parcel": "^2.8.3",
    "postcss": "^8.4.22"
  },
  "dependencies": {
    "@babel/runtime": "^7.10.0",
    "alpinejs": "^2.3.5",
    "chrome-extension-async": "^3.4.1",
    "github-injection": "^1.1.0",
    "jest-environment-jsdom": "^29.5.0",
    "tailwindcss": "^3.3.1"
  }
}
